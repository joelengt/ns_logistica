		link(rel="stylesheet", href="../../css/index.css")
	body(id="App_Container", class="wrap")
		header
			h1 AstrumApp
			img(src="../../#{user.photo.path}", width="80")
			p @#{user.username}
			
		section
			h3  Todo sobre las ordenes de trabajo
			
		div(id="map")
		div(id="streetview")
			p lista de ordendes de trabajo
			strong #{msg}
		section(class="ArticlesContainer")

script(type="text/javascript", src="http://code.jquery.com/jquery-1.11.1.js")
