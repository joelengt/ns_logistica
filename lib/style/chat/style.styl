.MessagesFriends
	width 300px
	height 100%
	padding-top 60px
	background-color White
	position fixed
	top 0
	right -300px
	box-sizing border-box
	z-index 80
	box-shadow 0 0 3px colorShadow
	&__containner
		width 100%
		height 100%
		position relative
		&--search
			position absolute
			padding .5em
			border-bottom 1px solid Gris_background
			width 100%
			height 60px
			display flex 
			align-items center
			box-sizing border-box
			justify-content space-between
			.btnSearch
				background-color White
				cursor pointer
				color Verde_bold
				font-size 1em
				border-radius 4px
				outline 0
				border 1px solid Verde_bold
				padding .2em .5em
			.CloseWindowFriend
				color Gris_lighter
				cursor pointer			
		&--items
			width 100%
			height 100%
			overflow auto
			box-sizing border-box
			padding-top 60px
			.ItemRoom, .ItemFriend
				cursor pointer
				width 100%
				border-bottom 1px solid Gris_background
				&__containner
					width 100%
					position relative
					&--image
						top 10px
						position absolute
						width 40px
						height 40px
						margin-left 5px
						border-radius 50%
						background-size cover
						background-position center
						background-repeat no-repeat
						.counter
							// display none
							position absolute
							bottom -3px
							text-align center
							width 9px
							font-size 8px
							color White
							background-color #009688
							border-radius 100px
							padding 3px
					&--text
						padding 10px 10px 10px 50px
					.Connect
						background-color Gris_lighter
						position absolute
						top 25px
						right 5px
						width 10px
						height 10px
						border-radius 100px		
		.UserRoom
			width 100%
			height 100%
			position relative
			box-sizing border-box
			display flex
			flex-direction column
			// padding-bottom 60px
			&__head
				order 1
				background-color Azul_Chat
				color White
				width 100%
				height 40px
				display flex
				align-items center
				justify-content center
				position relative
				&--image
					margin-right 5px
					background-repeat no-repeat
					background-position center
					width 30px
					height 30px
					background-size cover
					border-radius 50%
				&--text
					max-width 250px
					p
						white-space nowrap
						overflow hidden
						text-overflow ellipsis
				.backUsers
					position absolute
					right 0
					height 100%
					display flex
					align-items center
					width 25px
					cursor pointer
			&__chat
				order 2
				flex 1 1 0
				overflow auto
				width 100%
				&--message
					width 100%
					.ItemLeft, .ItemRight
						display flex
						padding 3px 0
						&__content
							max-width 200px
							padding 7px
							margin 0 7px
							&--message
								.contentMessage
									font-family AvenirLighter
									font-size 14px
									margin-bottom 3px
								.dateMessage
									font-family AvenirLighter
									font-size 10px
								.Image
									margin 5px 0
									background-size contain
									background-color Azul_imageChat
									background-position center
									background-repeat no-repeat
									width 150px
									height 150px
									border-radius 5px
								.Video
									margin 5px 0
									max-width 200px
									background-color Azul_imageChat
									max-height 200px
									&__Item
										max-width 150px
										max-height 150px
										border-radius 4px
								.Audio
									margin 5px 0
									max-width 200px
									padding-right 9px
									background-color #fafafa
									height 32px
									&__item
										width 191px
									
					.ItemLeft
						justify-content flex-start
						&__content
							background-color Gris_hover
							border-radius 10px 10px 10px 0px
							&--message
								.contentMessage
									color Gris_lighter
								.dateMessage
									color Gris_lighter
									text-align right						
					.ItemRight
						justify-content flex-end
						&__content
							background-color Azul_Chat
							border-radius 10px 10px 0px 10px
							&--message
								.contentMessage
									color White		
								.dateMessage
									color White
									text-align right	
			&__form
				order 3
				width 100%
				&--containner
					width 100%
					.inputMessage
						border-top 1px solid Gris_background
						width 100%
						.textLabel
							z-index 1
							position absolute
							margin 10px
							span
								font-size 14px
								color Gris_background
								font-family AvenirLighter
						.TextMessage
							z-index 5
							font-size 14px
							position relative
							padding 10px
							outline 0
							font-size 14px 
							color Gris_Bold
					.PreviewFile
						&__content
							.ProgressBar
								width 90%
								margin .5em auto
								border 1px solid Verde_bold
								border-radius 100px
								box-sizing border-box
								&__barra
									background-color Verde_bold
									height 10px
									border-radius 100px
						.PreviewImage
							margin .2em .5em
							width auto
							max-height 100px
							border-radius 4px
							border 1px solid Verde_bold
						.PreviewVideo
							margin .2em .5em
							// width auto
							max-width 150px
							max-height 110px
							border-radius 4px
							border 2px solid Verde_bold
						// .PreviewAudio
					.btns
						border-top 1px solid Gris_background
						display flex
						justify-content space-between
						align-items center
						width 100%
						&__inputFile
							width 25px
							label
								cursor pointer
								color Gris_background
							input
								width 0.1px
								overflow hidden
								position absolute
								z-index -1
								opacity 0
								height 0.1px
						&__btnSend
							width 60px
							height 100%
							&--btn
								padding .5em
								cursor pointer
								width 100%
								height 100%
								outline 0
								font-style italic
								border 0
								background-color White
								border-left 1px solid Gris_background
								color Gris_lighter
								&:hover
									background-color Azul_Chat
									color White
									border-left Azul_Chat